<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_cafe_restaurant_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cafe1_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageView_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/location_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageView_cafe_restaurant_icon"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/imageView_like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/like_icon"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serendipityCafe_name"
        style="@style/NameStyle"
        app:layout_constraintLeft_toRightOf="@id/imageView_cafe_restaurant_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"

        />

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serendipityCafe_address"
        app:layout_constraintLeft_toRightOf="@id/imageView_location_icon"
        app:layout_constraintTop_toTopOf="@id/imageView_location_icon"
        android:layout_marginTop="3dp"
       style="@style/AddressStyle"
        />

    <TextView
        android:id="@+id/textView_openingHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serendipityCafe_openingHours"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageView_cafe_restaurant_icon"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textView_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintBottom_toTopOf="@id/imageView_like_icon"
        app:layout_constraintRight_toRightOf="@id/imageView_like_icon"
        style="@style/LikeStyle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
