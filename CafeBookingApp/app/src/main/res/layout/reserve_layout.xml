<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_cafe_restaurant_image_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cafe1" />

    <TextView
        android:id="@+id/textView_cafe_restaurant_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/serendipityCafe_name"
        android:gravity="center_horizontal"
        android:background="@color/colorBlue"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/textView_booking_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookingTitle"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="20sp"/>
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBlue"
        />

    <TextView
        android:id="@+id/textView_date_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/textView_time_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/textView_numberOfDiners_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of diners"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/textView_cuisine_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuisine"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/black"/>
</LinearLayout>
